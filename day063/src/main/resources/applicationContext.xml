<?xml version="1.0" encoding= "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:aop="http://www.springframework.org/schema/aop"
   xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation= "http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.2.xsd
      http://www.springframework.org/schema/aop
      http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
   

	<context:component-scan base-package="test" />
	<context:component-scan base-package="biz" />

	<bean class="biz.common.LogAdvice" id="logAdvice" />
	<bean class="biz.common.LogAdvice2" id="logAdvice2" />
	<bean class="biz.common.AfterReturningAdvice" id="logAdvice3" />
	<bean class="biz.common.AfterThrowingAdvice" id="logAdvice4" />
	<bean class="biz.common.AroundAdvice" id="logAdvice5" />
	<aop:config>
		<aop:pointcut id="aPointcut" expression="execution(* biz..*Impl.*(..))"/>
		<aop:pointcut id="bPointcut" expression="execution(* biz..*Impl.select*(..))"/>
		<aop:aspect ref="logAdvice">
			<aop:before pointcut-ref="aPointcut" method="printLog"/>
		</aop:aspect>
		<aop:aspect ref="logAdvice2">
			<aop:after pointcut-ref="bPointcut" method="printLog"/>
		</aop:aspect>
		<aop:aspect ref="logAdvice3">
			<aop:after-returning pointcut-ref="bPointcut" method="printLog"/>
		</aop:aspect>
		<aop:aspect ref="logAdvice4">
			<aop:after-throwing pointcut-ref="aPointcut" method="printLog"/>
		</aop:aspect>
		<aop:aspect ref="logAdvice5">
			<aop:around pointcut-ref="aPointcut" method="printLog"/>
		</aop:aspect>
	</aop:config>
	
</beans>